<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@mipmap/datajobs"
    android:foreground="?attr/selectableItemBackground"
    tools:context=".BottomSheetFragment"
    >

    <RelativeLayout
        android:id="@+id/reltive"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director of marketing"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo_bold"
            android:textSize="14sp"/>
        <RelativeLayout
            android:id="@+id/salaryLayout"
            android:layout_marginTop="@dimen/margin_five"
            android:layout_below="@id/job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScreenScape inc."
                android:textColor="@color/gray"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                />
            <TextView
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_dollar_sign_blue"
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                android:textColor="@color/blue"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/date_type"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:layout_below="@id/salaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:id="@+id/final_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct.27"
                android:textColor="@color/pink"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"
                android:drawableRight="@drawable/ic_calendar_times_pink"
                />
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full time"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo_bold"
                android:textSize="14sp"/>
        </RelativeLayout>
        <Button
            android:layout_below="@id/date_type"
            android:id="@+id/jobRequirements"
            android:textColor="@color/black"
            android:text="@string/job_requirements"
            android:layout_centerHorizontal="true"
            android:layout_width="266.5dp"
            android:textAllCaps="false"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:textSize="16dp"
            android:fontFamily="@font/cairo_bold"
            android:background="@drawable/btn_job_requirements"
      style="?android:borderlessButtonStyle"
            />
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin17"
            android:layout_below="@id/jobRequirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:id="@+id/happy_visit"
                android:fontFamily="@font/cairo"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visit_our"
                />
            <TextView
                android:textSize="12sp"
                android:id="@+id/website"
                android:fontFamily="@font/cairo"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offical"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/address_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/reltive"
        android:layout_marginTop="@dimen/margin36"
        android:background="@drawable/textview_address">

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18dp"
            android:id="@+id/txtview_address"
            android:drawableRight="@drawable/ic_map_marker_alt"
            android:drawablePadding="8dp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:padding="13dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gaza-AL-Remal-str 13."/>

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_save"
            android:background="@color/green"
            android:drawableLeft="@drawable/ic_bookmarklist"
            android:layout_width="@dimen/margin45"
            android:layout_height="match_parent"
            android:paddingLeft= "@dimen/margin16"
            />
        <TextView
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_save_white"
            android:background="@color/green"
            android:drawableLeft="@drawable/ic_bookmark_whit_fille"
            android:layout_width="@dimen/margin45"
            android:layout_height="match_parent"
            android:paddingLeft= "@dimen/margin16"
            />
    </RelativeLayout>
    <Button
        android:drawableLeft="@drawable/ic_left_arrow"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:id="@+id/btn_apply"
        android:textColor="@color/white"
        android:text="@string/Apply"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/address_save"
        android:layout_width="266dp"
        android:textAllCaps="false"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/color_button"
        android:textSize="16dp"
        android:gravity="center"
        android:fontFamily="@font/cairo"
        style="?android:borderlessButtonStyle"
        />
    <Button
        android:enabled="false"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_left_arrow"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:id="@+id/btn_befor_applied"
        android:textColor="@color/white"
        android:text="@string/befor_applied"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/address_save"
        android:layout_width="266dp"
        android:textAllCaps="false"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/color_button_applied"
        android:textSize="16dp"
        android:gravity="center"
        android:fontFamily="@font/cairo"
        style="?android:borderlessButtonStyle"

        />
</RelativeLayout>