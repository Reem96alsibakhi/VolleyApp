<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/pullToRefresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookmarkFragment"
    android:background="@color/white">

    <TextView
        android:layout_marginLeft="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_trash_alt"
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/Bookmark_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookmark"
        android:fontFamily="@font/cairo_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin17"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/posts_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/postsJobs"
        android:fontFamily="@font/cairo_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin20"/>
    <TextView
        android:visibility="gone"
        android:layout_marginRight="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:drawableRight="@drawable/ic_briefcase_applieduser"
        android:id="@+id/jobs_applied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        />

        <TextView
            android:visibility="gone"
            android:id="@+id/noBookmarks"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_found"
            android:fontFamily="@font/cairo"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
             />

    <ProgressBar
        android:id="@+id/prgbar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <ListView
        android:id="@+id/jobsBookmark"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/margin17"
        android:divider="@android:color/transparent">

    </ListView>

</RelativeLayout>
