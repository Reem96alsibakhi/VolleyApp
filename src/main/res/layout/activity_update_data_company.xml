<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/padding_activity"
    android:paddingRight="@dimen/padding_activity"
    tools:context=".update_data_company">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="31dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_back_arrow"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin31"
            android:textSize="18sp"
            />
    <TextView
        android:id="@+id/update_data"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_data"
        android:fontFamily="@font/cairo_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin20"
        />
    <LinearLayout
        android:id="@+id/linear_data"
        android:layout_below="@id/update_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_activity"
        android:paddingRight="@dimen/padding_activity"
        android:orientation="vertical">

        <EditText
            android:fontFamily="@font/cairo"
            android:layout_marginTop="@dimen/margin31"
            android:id="@+id/username"
            android:drawableRight="@drawable/ic_user_tie"
            android:drawablePadding="16dp"
            android:padding="@dimen/margin_fifteen"
            android:layout_width="266.5dp"
            android:layout_height="55dp"
            android:textSize="14sp"
            android:hint="@string/username"
            android:textColor="@color/black"
            android:background="@drawable/border_edittext"/>
        <TextView
            android:id="@+id/username_invalid"
            android:layout_below="@id/username"
            android:layout_width="266.5dp"
            android:fontFamily="@font/cairo"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            />
        <EditText
            android:fontFamily="@font/cairo"
            android:padding="@dimen/margin_fifteen"
            android:textColor="@color/black"
            android:id="@+id/email"
            android:drawableRight="@drawable/ic_envelope"
            android:drawablePadding="16dp"
            android:layout_width="266.5dp"
            android:layout_height="55dp"
            android:textSize="14sp"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/margin17"
            android:background="@drawable/border_edittext"/>
        <TextView
            android:id="@+id/email_invalid"
            android:layout_below="@id/email"
            android:layout_width="266.5dp"
            android:fontFamily="@font/cairo"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            />
        <EditText
            android:layout_marginTop="@dimen/margin17"
            android:id="@+id/companyEdit"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:background="@drawable/border_edittext"
            android:drawableRight="@drawable/ic_building"
            android:drawablePadding="@dimen/margin_fifteen"
            android:fontFamily="@font/cairo"
            android:hint="@string/company_name"
            android:padding="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/nameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            android:fontFamily="@font/cairo"
            />
        <EditText
            android:id="@+id/placeEditTxt"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin17"
            android:background="@drawable/border_edittext"
            android:drawableRight="@drawable/ic_map_marker_alt"
            android:drawablePadding="@dimen/margin_fifteen"
            android:fontFamily="@font/cairo"
            android:hint="@string/place"
            android:padding="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/companyPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            android:fontFamily="@font/cairo"
            />
        <EditText
            android:id="@+id/AddressEdit"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin17"
            android:background="@drawable/border_edittext"
            android:drawableRight="@drawable/ic_thumbtack"
            android:drawablePadding="@dimen/margin_fifteen"
            android:fontFamily="@font/cairo"
            android:hint="@string/company_website"
            android:padding="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/companyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            android:fontFamily="@font/cairo"
            />
        <EditText
            android:inputType="phone"
            android:id="@+id/mobileEdit"
            android:layout_width="266.5dp"
            android:layout_height="55dp"
            android:fontFamily="@font/cairo"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/margin17"
            android:hint="@string/mobile_num"
            android:padding="@dimen/margin_ten"
            android:background="@drawable/border_edittext"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/companyJawwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            android:fontFamily="@font/cairo"
            />
        <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin17"
            android:background="@drawable/border_edittext"
            android:fontFamily="@font/cairo"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:padding="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/webEdit"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin17"
            android:background="@drawable/border_edittext"
            android:drawableRight="@drawable/ic_globe_africa"
            android:drawablePadding="@dimen/margin_fifteen"
            android:fontFamily="@font/cairo"
            android:hint="@string/website_optional"
            android:padding="@dimen/margin_ten"
            android:textColor="@color/black"
            android:textSize="14sp"

            />
        <TextView

            android:id="@+id/companyWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="@dimen/txtSize10sp"
            android:fontFamily="@font/cairo"
            />
    </LinearLayout>
    <Button
        android:enabled="false"
        android:layout_marginTop="32dp"
        android:id="@+id/btn_update"
        android:textColor="@color/white"
        android:text="@string/update"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_data"
        android:layout_width="266.5dp"
        android:textAllCaps="false"
        android:layout_height="48dp"
        android:textSize="16dp"
        android:fontFamily="@font/cairo"
        android:background="@drawable/color_button"
        android:layout_marginBottom="@dimen/margin20"
        style="?android:borderlessButtonStyle"
        />
    </RelativeLayout>
</ScrollView>